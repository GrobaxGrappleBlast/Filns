<UserControl x:Class="WPF_CloseButton.tester"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_CloseButton"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             >
    <Grid >
		<Border Background="gray" >
            <local:SheetItem
				
				BorderBrush="black"
				BorderThickness="1"
                Width="250"
                Height="100"
                InnerPadding="10"
                BtnCornerRadius="2"
                CornerRadius="2"
                Btn1Symbol="X"
                Btn2Symbol="..."
            
                Btn1Color="red"
                Btn2Color="green"
                PrimaryColor="yellow"
                Background="white"
            
                label1String="FilePath"
                label2String="Alias"
            
                input1String="_ _ _ _ _ _ _ _ _ _ _ _"
                input2String="_ _ _ _ _ _ _ _ _ _ _ _"
                />
		</Border>
    </Grid>
</UserControl>
