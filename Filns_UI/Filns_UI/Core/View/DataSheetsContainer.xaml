<UserControl x:Class="Filns_UI.Core.View.DataSheetsContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Filns_UI.Core.View"
            
             xmlns:ds="clr-namespace:WPF_CloseButton;assembly=WPF_CloseButton"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border
        Grid.Row="3" Grid.Column="1"
        BorderThickness="{Binding BorderThickness   ,Mode=TwoWay    ,TargetNullValue=1          , FallbackValue=1               }"
        BorderBrush=    "{Binding BorderBrush       ,Mode=TwoWay    ,TargetNullValue=black      , FallbackValue=black           }"
        CornerRadius=   "{Binding CornerRadius      ,Mode=TwoWay    ,TargetNullValue=2          , FallbackValue=2               }"
        Background=     "{Binding Background        ,Mode=TwoWay    ,TargetNullValue=transparent, FallbackValue=white           }" 
    >
        <StackPanel 
            x:Name="stackPanel">
            

        </StackPanel>
    </Border>

    
</UserControl>
